<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.gini.android.capture.component">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <queries>
        <intent>
            <action android:name="android.intent.action.PICK" />
            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="android.intent.action.OPEN_DOCUMENT" />
            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="android.intent.action.OPEN_DOCUMENT" />
            <data android:mimeType="application/pdf" />
        </intent>
    </queries>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="true" />

    <application
        android:name="net.gini.android.capture.component.ComponentApiExampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true">
        <activity
            android:name="net.gini.android.capture.component.MainActivity"
            android:theme="@style/AppThemeCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter
                android:label="@string/app_name"
                tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter
                android:label="@string/app_name"
                tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/pdf" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.gini.android.capture.component.camera.compat.CameraExampleAppCompatActivity"
            android:theme="@style/AppThemeCompat.NoActionBar" />
        <activity
            android:name="net.gini.android.capture.component.camera.standard.CameraExampleActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="net.gini.android.capture.component.review.compat.ReviewExampleAppCompatActivity"
            android:theme="@style/AppThemeCompat.NoActionBar" />
        <activity
            android:name="net.gini.android.capture.component.review.standard.ReviewExampleActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="net.gini.android.capture.component.review.multipage.MultiPageReviewExampleActivity"
            android:theme="@style/AppThemeCompat.NoActionBar" />
        <activity
            android:name="net.gini.android.capture.component.analysis.compat.AnalysisExampleAppCompatActivity"
            android:theme="@style/AppThemeCompat.NoActionBar" />
        <activity
            android:name="net.gini.android.capture.component.analysis.standard.AnalysisExampleActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="net.gini.android.capture.component.noresults.compat.NoResultsExampleAppCompatActivity"
            android:theme="@style/AppThemeCompat.NoActionBar" />
        <activity
            android:name="net.gini.android.capture.component.noresults.standard.NoResultsExampleActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="net.gini.android.capture.component.ExtractionsActivity"
            android:theme="@style/AppThemeCompat" />
    </application>

</manifest>